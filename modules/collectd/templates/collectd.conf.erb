#</Plugin>

# http://collectd.org/documentation/manpages/collectd.conf.5.shtml#plugin_syslog
LoadPlugin "syslog"
<Plugin "syslog">
	LogLevel err
</Plugin>

Include "/etc/collectd.d/*.conf"


