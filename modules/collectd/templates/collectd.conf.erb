Hostname    <%= fqdn %>
FQDNLookup  false
BaseDir     "/var/lib/collectd"
PIDFile     "/var/run/collectd.pid"
PluginDir   "/usr/lib64/collectd"
TypesDB     "/usr/share/collectd/types.db"

Interval     30
#ReadThreads  5


# http://collectd.org/documentation/manpages/collectd.conf.5.shtml#plugin_logfile
#
#LoadPlugin "logfile"
#<Plugin logfile>
