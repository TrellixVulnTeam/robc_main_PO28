<VirtualHost *:80>
    DocumentRoot /app/shared/docroots/www.totallyhermedia.com/current
    ServerName www.totallyhermedia.com
    ServerAlias www.totallyhermedia.ca
    ServerAlias www.totallyhermedia.com.au
    ServerAlias www.totallyhermedia.co.uk
    ErrorLog /app/log/www.totallyhermedia.com-error.log
    CustomLog /app/log/www.totallyhermedia.com-access.log combined

    <Directory /app/shared/docroots/www.totallyhermedia.com/current/>
        AllowOverride FileInfo Indexes Options
        RewriteEngine On
        RewriteCond %{REQUEST_FILENAME} !-d
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteRule ^(.*)$ index.php?url= [QSA,L]
    </Directory>
</VirtualHost>

<VirtualHost *:80>
        ServerName totallyhermedia.com
        Redirect 301 / http://www.totallyhermedia.com/
</VirtualHost>

