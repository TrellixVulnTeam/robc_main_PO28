# This file is managed by Puppet do not modify it from <%=fqdn %>


<VirtualHost *:80>
    ServerName stg.publishers.springboardplatform.com
    ServerAlias publishers.springboardplatform.com
    ServerAlias stg.publishers.springboard.gorillanation.com
    ServerAlias publishers.springboard.gorillanation.com

    DocumentRoot /app/shared/docroots/cms.springboardplatform.com/current/webroot/ 
    <Directory /app/shared/docroots/cms.springboardplatform.com/current/webroot/>
        AllowOverride all
        Order allow,deny
        allow from all
    </Directory>

    Redirect permanent /xml_feeds_advanced      http://stg.cms.springboardplatform.com/xml_feeds_advanced
    Redirect permanent /xml_feeds_customlists   http://stg.cms.springboardplatform.com/xml_feeds_customlists
    Redirect permanent /teaser                  http://stg.cms.springboardplatform.com/teaser
    Redirect permanent /embed_code_lightbox     http://stg.cms.springboardplatform.com/embed_code_lightbox
    Redirect permanent /previews     		http://stg.cms.springboardplatform.com/previews
    Redirect permanent /docs/pdf_doc		http://stg.cms.springboardplatform.com/docs/pdf_doc

    # SBV Name Change
    RewriteEngine On
    RewriteCond %{HTTP_HOST} ^stg.publishers.springboard.gorillanation.com
    RewriteRule ^(.*)$ http://stg.publishers.springboardplatform.com/$1 [R=301,NC]


    <%=logging ? '' : '#'%>ErrorLog /app/log/stg.publishers.springboard.gorillanation.com_error.log
    <%=logging ? '' : '#'%>CustomLog /app/log/stg.publishers.springboard.gorillanation.com_access.log combined

</VirtualHost>
