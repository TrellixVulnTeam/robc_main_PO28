# This file is managed by Puppet do not modify it from <%=fqdn %>


<VirtualHost *:80>
    ServerName publishers.springboardplatform.com 
    ServerAlias publishers.springboard.gorillanation.com origin.publishers.springboardplatform.com cdn.publishers.springboardplatform.com

    DocumentRoot /app/shared/docroots/cms.springboardplatform.com/current/webroot/ 
    <Directory /app/shared/docroots/cms.springboardplatform.com/current/webroot/>
        AllowOverride all
        Order allow,deny
        allow from all
    </Directory>

    Redirect permanent /xml_feeds_advanced      http://cms.springboardplatform.com/xml_feeds_advanced
    Redirect permanent /xml_feeds_customlists   http://cms.springboardplatform.com/xml_feeds_customlists
    Redirect permanent /teaser                  http://cms.springboardplatform.com/teaser
    Redirect permanent /embed_code_lightbox     http://cms.springboardplatform.com/embed_code_lightbox
    Redirect permanent /previews                http://cms.springboardplatform.com/previews
    Redirect permanent /docs/pdf_doc            http://cms.springboardplatform.com/docs/pdf_doc

    # SBV Name Change
    RewriteEngine On
    RewriteCond %{HTTP_HOST} ^publishers.springboard.gorillanation.com
    RewriteRule ^(.*)$ http://publishers.springboardplatform.com/$1 [R=301,NC]


    <%=logging ? '' : '#'%>ErrorLog /app/log/publishers.springboard.gorillanation.com_error.log
    <%=logging ? '' : '#'%>CustomLog /app/log/publishers.springboard.gorillanation.com_access.log combined

</VirtualHost>
