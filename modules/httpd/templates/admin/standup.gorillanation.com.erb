<VirtualHost *:80>
    ServerName standup.gorillanation.com
    ServerAlias *.standup.gorillanation.com
    DocumentRoot /app/shared/docroots/standup.gorillanation.com/
    AddHandler cgi-script .cgi
    <%=logging ? '' : '#'%>ErrorLog /app/log/standup.gorillanation.com-error.log
    <%=logging ? '' : '#'%>CustomLog /app/log/standup-access.gorillanation.com.log combined

   <Directory /app/shared/docroots/standup.gorillanation.com>
     Options ExecCGI
     DirectoryIndex index.cgi
   </Directory>

</VirtualHost>
