# This file is managed by Puppet do not modify it from <%= fqdn %>
# My.cnf for MySQL 5.5 for Standalone default config
# filename=<%= file %>


[mysqld]
datadir=<%= mysqldatadir %>
server-id = <%= mysqld_serverid %>
report-host = <%= fqdn %>

# Error log
log-error=/sql/log/error.log

# Slow query log
log_output=FILE
slow_query_log=1
slow_query_log_file=/sql/log/slow-queries.log
long_query_time=5

# Binlog format
log-bin = /sql/binlog/bin.log
log-bin-index = /sql/binlog/bin.index
expire_logs_days = 7

# Connection params
max_connections=500
thread_cache_size=80
max_connect_errors=100
connect_timeout=20

# MyISAM Params
key_buffer_size=64M

# Innodb Params
innodb_file_per_table
innodb_buffer_pool_size=250M
innodb_buffer_pool_instances=1
innodb_log_file_size=5M
innodb_log_buffer_size=8M
innodb_flush_method=O_DIRECT

# Query cache
query_cache_size = 64M

# Table cache
table_open_cache = 1024


## Extra Opts
wait_timeout=60

read_buffer_size=1M
myisam_sort_buffer_size=32M
innodb_additional_mem_pool_size=16M
innodb_flush_log_at_trx_commit=1

query_cache_limit=1M

tmp_table_size=64M
max_heap_table_size=64M

sort_buffer_size=2M

log-queries-not-using-indexes
