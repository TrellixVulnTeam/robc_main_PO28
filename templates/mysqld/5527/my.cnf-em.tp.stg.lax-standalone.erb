# This file is managed by Puppet do not modify it from <%= fqdn %>
# My.cnf for MySQL 5.5 for Standalone default config
# filename=<%= file %>


[mysqld]
datadir=<%= mysqldatadir %>
server-id = <%= mysqld_serverid %>
report-host = <%= fqdn %>

# Error log
log-error=/sql/log/error.log

# Slow query log
log_output=FILE
slow_query_log=1
slow_query_log_file=/sql/log/slow-queries.log
long_query_time=5

# Binlog format
log-bin = /sql/binlog/bin.log
log-bin-index = /sql/binlog/bin.index
expire_logs_days = 3

# Connection params
max_connections=500
thread_cache_size=300
max_connect_errors=100
connect_timeout=20

# MyISAM Params
key_buffer_size=64M

# Innodb Params
innodb_file_per_table
innodb_buffer_pool_size=6144M
innodb_buffer_pool_instances=8
innodb_log_file_size=512M
innodb_log_buffer_size=8M
innodb_flush_method=O_DIRECT

# Query cache
query_cache_size=0
query_cache_type=0

# Table cache
table_open_cache = 2048

#####################################################
# Options imported from old EM config - SYD 20130510
#
secure_auth=1
event_scheduler=1
lower_case_table_names=1

# If you wish to use binary logging (e.g. for replicating the MySQL
# Enterprise Monitor's data repository), please uncomment both of the
# following two options.  ROW-based binary logging is essential
# the smooth running of the application.
binlog_format=ROW

innodb_flush_log_at_trx_commit=2
innodb_support_xa=0
innodb_max_dirty_pages_pct=20
innodb_locks_unsafe_for_binlog=1

max_heap_table_size=32M
tmp_table_size=32M
sort_buffer_size=512K
read_buffer_size=512K
read_rnd_buffer_size=512K
max_allowed_packet=1M
