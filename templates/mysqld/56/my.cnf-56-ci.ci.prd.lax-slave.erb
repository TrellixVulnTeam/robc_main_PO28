# This file is managed by Puppet do not modify it from <%= fqdn %>
# My.cnf for MySQL 5.6 for Slave default config
# filename=<%= file %>

[mysqld]
datadir=<%= mysqldatadir %>
server-id = <%= mysqld_serverid %>
report-host = <%= fqdn %>

# Error log
log-error=/sql/log/error.log

# Slow query log
log_output=FILE
slow_query_log=1
slow_query_log_file=/sql/log/slow-queries.log
long_query_time=5

# Relay log format
relay-log=/sql/binlog/relay.log
relay-log-index=/sql/binlog/relay.index
relay_log_info_file=/sql/binlog/relay.info

# Connection params
max_connections=500
thread_cache_size=600
connect_timeout=20

# MyISAM Params
key_buffer_size=128M

# Innodb Params
innodb_buffer_pool_size=30G
innodb_log_file_size=768M
innodb_log_buffer_size=8M
innodb_flush_method=O_DIRECT
innodb_stats_on_metadata=OFF

# Query cache
query_cache_size = 0

# Other Params
read_only

# Turn off the nonstandard behaviors for  TIMESTAMP
explicit-defaults-for-timestamp

# Keep server warm 
innodb_buffer_pool_dump_at_shutdown=ON
innodb_buffer_pool_load_at_startup=ON
innodb_buffer_pool_filename=ib_buffer_pool

# Undo tablespace
innodb_undo_directory=<%= mysqldatadir %>
innodb_undo_tablespaces=10
innodb_undo_logs=5

# GTID - needs more research
# gtid-mode = ON
# enforce-gtid-consistency = true

# Table cache
table_open_cache = 2048


# Other InnoDB Params
innodb_flush_log_at_trx_commit=0
innodb_lock_wait_timeout=120

# Other query cache params
query_cache_type=0

# Other Connection params
max_allowed_packet=128M
net_read_timeout=60
slave_transaction_retries=30

# Set SSL
#ssl
#ssl-ca=/etc/mysql/ca-cert.pem
#ssl-cert=/etc/mysql/client-cert.pem
#ssl-key=/etc/mysql/client-key.pem

# Site Setted to UTF8
character_set_server=utf8
character_set_filesystem=utf8
collation_server=utf8_general_ci
skip_character_set_client_handshake

# Other Binlog Format
binlog-format=MIXED
wait_timeout = 3600
