<?php

namespace CI\Content\Rating;

abstract class DataSource implements \Iterator
{
    protected $aContentRating;

    public function __construct()
    {
        $this->init();
    }


    public function getById($nContentRatingId)
    {
        $nContentRatingId = (int) $nContentRatingId;
        if (isset($this->aContentRating[$nContentRatingId])) {
            return $this->aContentRating[$nContentRatingId];
        }
        return null;
    }

    public function rewind()
    {
        return reset($this->aContentRating);
    }

    public function current()
    {
        return current($this->aContentRating);
    }

    public function key()
    {
        return key($this->aContentRating);
    }

    public function next()
    {
        return next($this->aContentRating);
    }

    public function valid()
    {
        return key($this->aContentRating) !== null;
    }

    abstract public function init();
}