<?php
App::import('Component', 'CIHubs');

class CIHubsSelectComponent extends CIHubsComponent
{
    public $helpers = array('Javascript', 'Html');

    protected function initView()
    {
        $this->view = 'components/hubs/select';
    }

    public function process()
    {
        $multiple = $this->options->get('multiple', false);

        $return = parent::process();
        $return['options']['multiple'] = $multiple === false ? '' : ' multiple';
        return $return;
    }
}