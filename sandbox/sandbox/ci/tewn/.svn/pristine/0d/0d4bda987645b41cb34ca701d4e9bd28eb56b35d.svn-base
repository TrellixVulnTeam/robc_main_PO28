<div class="container">
    <div class="campaign-option campaign-show-by">
        Show by:
        <select id="show_by" class="input">
                <option id='CPC_FILTER_VIEW_BY_CAMPAIGNS' value="<?php echo CPC_FILTER_VIEW_BY_CAMPAIGNS?>" >Campaigns</option>
                <option id='CPC_FILTER_VIEW_BY_COUNTRY' value="<?php echo CPC_FILTER_VIEW_BY_COUNTRY?>" >Country</option>
            </select>
    </div>
    <div class="campaign-option campaign-filter">
        Filter by:
            <select id="status" class="input">
                <option id='CPC_CAMPAIGN_STATUS_ALL' value="<?php echo CPC_CAMPAIGN_STATUS_ALL?>" >All</option>
                <option id='CPC_CAMPAIGN_STATUS_ACTIVE' value="<?php echo CPC_CAMPAIGN_STATUS_ACTIVE?>" >Active</option>
                <option id='CPC_CAMPAIGN_STATUS_PAUSED' value="<?php echo CPC_CAMPAIGN_STATUS_PAUSED?>" >Paused</option>
                <option id='CPC_CAMPAIGN_STATUS_INACTIVE' value="<?php echo CPC_CAMPAIGN_STATUS_INACTIVE?>" >Inactive</option>
            </select>
    </div>
    <div class="controls-bar">
        <a id="cpc_export" class="btn right" href="/cpc/export/<?php echo $website_id ?>/<?=strtotime("midnight -14 days")?>">Export to Excel</a>
