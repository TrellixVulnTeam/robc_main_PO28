<?php

namespace CI\Engine;

use \CI\Hub;

class Timer
{
    const TIMER_SIMILAR_ENGINE_CROWD_IGNITE    = 48;
    const TIMER_SIMILAR_ENGINE_GAME_REVOLUTION = 49;
    const TIMER_SIMILAR_ENGINE_CRAVE_ONLINE    = 50;
    const TIMER_SIMILAR_ENGINE_MOMTASTIC       = 52;
    const TIMER_SIMILAR_ENGINE_THEFASHIONSPOT  = 53;
    const TIMER_SIMILAR_ENGINE_TOTALLYHER      = 55;
    const TIMER_SIMILAR_ENGINE_NEWS            = 63;
    const TIMER_SIMILAR_ENGINE_ES              = 64;

    public function idToSimilarTimer($domain_id)
    {
        switch ($domain_id) {
            case Hub::DOMAIN_ID_CROWD_IGNITE:
                return self::TIMER_SIMILAR_ENGINE_CROWD_IGNITE;
            case Hub::DOMAIN_ID_GAME_REVOLUTION:
                return self::TIMER_SIMILAR_ENGINE_GAME_REVOLUTION;
            case Hub::DOMAIN_ID_CRAVE_ONLINE:
                return self::TIMER_SIMILAR_ENGINE_CRAVE_ONLINE;
            case Hub::DOMAIN_ID_MOMTASTIC:
                return self::TIMER_SIMILAR_ENGINE_MOMTASTIC;
            case Hub::DOMAIN_ID_THEFASHIONSPOT:
                return self::TIMER_SIMILAR_ENGINE_THEFASHIONSPOT;
            case Hub::DOMAIN_ID_TOTALLYHER:
                return self::TIMER_SIMILAR_ENGINE_TOTALLYHER;
            case Hub::DOMAIN_ID_NEWS:
                return self::TIMER_SIMILAR_ENGINE_NEWS;
            case Hub::DOMAIN_ID_ES:
                return self::TIMER_SIMILAR_ENGINE_ES;
        }
    }
}
