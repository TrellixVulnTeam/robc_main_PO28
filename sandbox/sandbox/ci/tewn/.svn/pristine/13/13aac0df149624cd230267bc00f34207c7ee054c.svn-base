class Logger_Analytic_LandingPage extends Logger_Analytic_Abstract
{
    /**
     * Creates and register the elements for a logger analytic
     * landing page
     *
     * @param Logger_Interface $logger The logger
     */
    public function __construct(Logger_Interface $logger)
    {
        parent::__construct($logger);

        $format = array(
            'item'      => '%s',
            'separator' => ',',
        );

        $this->registerElement(
            new Logger_Analytic_Element_TimeStamp('unix_time_stamp', $format)
        );
        $this->registerElement(
            new Logger_Analytic_Element_UserId('user_id', $format)
        );
        $this->registerElement(
            new Logger_Analytic_Element_Basic('link_click_page_id', $format)
        );
    }
}