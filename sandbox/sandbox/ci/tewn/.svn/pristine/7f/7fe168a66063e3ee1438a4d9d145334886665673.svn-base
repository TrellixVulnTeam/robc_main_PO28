    <script>
    $(function(){
        $.ajax('/management/get_warned_sites', {
            type: 'post',
            cache: false,
            dataType: 'json',
            success: function(stats) {
                $('.warnings #total_warnings').html('<b>(' + stats.length + ')</b>');
                if (stats.length > 0) {
                    $('.warnings .icon.icon-warning').addClass('animated');
                }
                $('.chart_down .preload').hide();
                buildWidgetDrops(stats);
            }
        });

        function buildWidgetDrops(stats) {
            for(i=0; i<stats.length; i++) {
                $('#widget_drop tr:last').after('<tr><td class="title"><a href="/management/website/' + stats[i].website_id + '">' + stats[i].name + '</a></td><td><a class="icon_button" onclick="show_full_stats(' + stats[i].website_id + ', 3); return false;" href="#" title="Accound information"><img src="/img/crowdignite/icons/table.png" alt="Charts" /></a><a class="icon_button" onclick="show_chart_popup(' + stats[i].website_id + ',3); return false;" href="#"><img src="/img/crowdignite/icon_chart_curve.png" alt="Charts" /></a></td><td>' + stats[i].widget_imp_average + '</td><td>' + stats[i].yesterday_stats + '</td><td>' + stats[i].percentage_drop + '%</td></tr>');
            }
            $('#widget_drop').show();
        }
    });
    </script>
