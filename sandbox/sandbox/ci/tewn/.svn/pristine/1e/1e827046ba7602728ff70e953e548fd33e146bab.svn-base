body{
    background-color:#CACACA;
}

div#header{
    background: #fff;
    border-bottom: 1px solid #8F8F8F;
    box-shadow:         0px 0px 29px 0px #8F8F8F;
    -webkit-box-shadow: 0px 0px 29px 0px #8F8F8F;
    -moz-box-shadow:    0px 0px 29px 0px #8F8F8F;
}

#header #login {
    display: inline-block;
    text-align: right;
    float: right;
    position: relative;
}

#header #logo {
    height: 50px;
}

#login a{
    font-family: "Arial";
    font-size: 12px;
}

#login .user {
    color: #2f404f;
}

#login .user,
#login #join a {
    text-decoration: none;
}

#login .user:hover {
    text-decoration: underline;
}

#login #join{
    background-clip: padding-box;
    background-color: #d7562b;
    border-radius: 4px;
    display: inline-block;
    margin-left: 15px;
    padding: 8px;
    -moz-background-clip: padding;
    -moz-border-radius: 4px;
    -webkit-background-clip: padding-box;
    -webkit-border-radius: 4px;
}

#login #join a {
    color:#FFFFFF;
}

#powerby{
    bottom: -15px;
}

.card {
    box-shadow: 0px 3px 5px 0px #8F8F8F;
    -webkit-box-shadow: 0px 3px 5px 0px #8F8F8F;
    -moz-box-shadow: 0px 3px 5px 0px #8F8F8F;
}

#footer {
    background: none repeat scroll 0 0 #666;
    border-top: 1px solid #333333;
    box-shadow: 0 -1px 5px #333;
    color: #000;
    width: 100%;
    clear: both;
    font-size: 12px;
    margin-top: 8px;
    margin-left: auto;
    margin-right: auto;
}

#footer a {
    color: #000;
    text-decoration: underline;
}

@media (max-width: 615px) {
    #header #login {
        display: none;
    }
}