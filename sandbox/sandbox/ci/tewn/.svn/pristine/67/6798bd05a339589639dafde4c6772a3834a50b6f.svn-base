/* signup */
h3.topContent { display: none; }
div.navigation {
    background: url(/img/gamerevolution/topnav_button_bg.png) left -64px no-repeat;
    display:inline-block;
    height:30px;
    width:940px;
    list-style: none;
    margin:0;
    padding:5px 0 0 5px;
    position:absolute;
    bottom:0;
    left:40px;
}

div.navigation a.top_button {
  background: url(/img/gamerevolution/topnav_button_bg.png)  right top no-repeat;
  color: #FFFFFF;
  display: block;
  float: left;
  font-family: Arial;
  font-size: 12px;
  font-weight: bold;
  line-height: 24px;
  margin-left: 5px;
  margin-right: 2px;
  padding-right: 10px;
  text-decoration: none;
}
div.navigation a.top_button:hover { color:red; }
div.navigation a.top_button span {
  background: url(/img/gamerevolution/topnav_button_bg.png) no-repeat left top;
  display: block;
  float: left;
  height: 24px;
  margin-left: -3px;
  position: relative;
  width: 9px;
}

div.row { width:960px; margin:0 auto; }
div.row #content { background: #fff; margin:0 auto; padding: 10px 20px; } 
div.row #content ul {
    background:#fff;
    box-shadow:0 1px 3px #999999;
    -moz-border-radius: 6px; /* Firefox */
    -webkit-border-radius: 6px; /* Safari, Chrome */
    border-radius:6px; /* CSS3 */
}
div.row #content ul, div.main  #content li { list-style: none;  }
div.row #content .column { width:940px; }

div.submit input{
    background: url(/img/gamerevolution/btnsignup.png) no-repeat;
    border:none;
    height: 69px;
    text-indent: -9999px;
    width:282px;
}
div.submit input:hover {
    background-position:0 -68px;
}
#create_form ul li.last {
    height: 5em!important;
    padding-bottom:2em!important;

}
/* signup 2 part */
#create_form { min-height:490px; position:relative;}
#create_form ul { padding-top:20px; }
#create_form .title {
    width:95%;
    margin:10px auto 10px;
    padding:10px 0;
    /*border-bottom:1px solid #ccc;*/
}
#create_form .title h2 {
    background:url(/img/crowdignite/ci_fire_icon.png) no-repeat 0 5px;
    color:#333;
    display:block;
    padding:0 0 0 25px;
    font-size:27px;
    letter-spacing: -0.05em;
}
#create_form .title p {
    color:#666;
    font-size:14px;
    line-height: 1em;
    margin:2px 0 10px 0;
    padding-left:25px;
    text-align:left;
}
#create_form div.control {
    position:relative;
    display:block;
    float:left;
    line-height:2em;
    margin:0;
    padding:0;
}
#create_form label.error {
    background:#FFF2BF url(/img/crowdignite/icon_deny.png) no-repeat 5px 5px;
    border:1px solid #e5d595;
    color:#900;
    display:block;
    font-size:14px;
    line-height:1.1em;
    margin:0;
    padding:6px 0 6px 29px;
    position: absolute;
    text-align:left;
    top: 0;
    left:280px;
    width: 350px;
    z-index: 100;
}
#create_form ul {
    width: 50%;
}
#create_form ul li {
    width:95%;
    margin:0 auto;
}
#create_form ul.form>li {
    height:3em;
    padding:1em 0 0.2em 0;
}
#create_form ul.form>li>label {
    color:#333;
    float:left;
    line-height:2em;
    margin:0;
    padding:0 30px 0 0;
    text-align:right;
    width:130px;
}
#create_form ul.form li span.terms {
    color:#333;
    font-size:14px;
    display: inline-block;
    padding-left:8px;
}
#create_form ul.form li label.terms a { color:#333!important; text-decoration: underline; }
#create_form ul li.alt {
    background:#fff;
}
#create_form ul li.focus_line {
    background:#fdf7df;
}
#create_form div.join_text {
    position:absolute;
    right:50px;
    text-align:left;
    top:100px;
    width:380px;
}
#create_form div.join_text #img_what_is_ci {
    background: url("/img/crowdignite/what_is_ci.png") no-repeat;
    display: inline-block;
    height: 205px;
    margin:30px -10px 0 0;
    width: 374px;
}
#create_form div.join_text h2 {
    color:#E26832;
    font-size: 25px;
    letter-spacing:-0.03em;
    padding:0;
}
#create_form div.join_text p {
    font-size:14px;
    width:90%;
}
#create_form div.join_text p a {
    color:#E26832;
    text-decoration:none;
}
