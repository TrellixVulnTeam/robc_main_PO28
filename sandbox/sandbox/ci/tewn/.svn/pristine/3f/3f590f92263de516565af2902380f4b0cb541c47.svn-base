namespace Test\Report;

/**
 * Testing the abstract class for the report settings
 * PHP Version 5.3
 *
 * @category Test
 * @package  Test\Report\Setting
 * @author   Francisco Gonzalez <francisco.gonzalez@evolvemediallc.com>
 * @license  Evolve Media LLC
 * @link     http://crowdignite.com
 * @group    report
 */
class SettingTest extends \PHPUnit_Framework_TestCase
{
	protected $oMockReportSetting;

	public function setUp()
	{
		$this->oMockReportSetting = $this->getMockForAbstractClass('\CI\Report\Setting');
	}

	public function testPopulateShouldReturnTheReportSettingObject()
	{
		$oResult = $this->oMockReportSetting->populate(array());

		$this->assertEquals(
			$this->oMockReportSetting,
			$oResult
		);
	}

	public function testToStringShouldReturnJson()
	{
		$sExpected = json_encode(array());

		$sResult = $this->oMockReportSetting->toString();

		$this->assertEquals(
			$sExpected,
			$sResult
		);
	}
}