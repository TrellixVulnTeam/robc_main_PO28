<?php

namespace Test;

class ContentRatingTest extends \PHPUnit_Framework_TestCase
{

    public function testGetAll()
    {
        $oContentRating = new \CI\ContentRating();
        $aExpected = array(
            array(
                "id"   => 0,
                "name" => "G"
            ),
            array(
                "id"   => 1,
                "name" => "PG13"
            ),
            array(
                "id"   => 2,
                "name" => "R"
            ),
            array(
                "id"   => 3,
                "name" => "MENS"
            )
        );

        $this->assertEquals($aExpected, $oContentRating->getAll());
    }

    public function testGetExistingValue()
    {
        $sExpected      = "PG13";
        $oContentRating = new \CI\ContentRating();
        $sResult        = $oContentRating->getName(1);

        $this->assertEquals($sExpected, $sResult);
    }

    public function testGetUnExistingValue()
    {
        $sExpected      = "";
        $oContentRating = new \CI\ContentRating();
        $sResult        = $oContentRating->getName(9999);

        $this->assertEquals($sExpected, $sResult);
    }
}
