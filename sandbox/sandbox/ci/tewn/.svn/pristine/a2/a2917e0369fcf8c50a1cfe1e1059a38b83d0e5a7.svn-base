body{
    background-color: #F8F8F8;
}

div#header{
    background-color: #FFF;
    border-bottom: 1px solid #BBB;
    box-shadow:         0px 1px 5px 0px #BBB;
    -moz-box-shadow:    0px 1px 5px 0px #BBB;
    -webkit-box-shadow: 0px 1px 5px 0px #BBB;
}

.card {
    box-shadow: 0px 3px 5px 0px #8F8F8F;
    -webkit-box-shadow: 0px 3px 5px 0px #8F8F8F;
    -moz-box-shadow: 0px 3px 5px 0px #8F8F8F;
}


.beta{
    bottom: -17px;
    color: #666666;
    font-size: 13px;
    position: relative;
}

#powerby{
    bottom: -17px;
    color: #666666;
    margin-bottom: 15px;
}

@media (max-width: 1243px) {
    .ad_leaderboard{
        display: none;
    }
}

@media (max-width: 390px) {
    #powerby{
        display: none;
    }
}