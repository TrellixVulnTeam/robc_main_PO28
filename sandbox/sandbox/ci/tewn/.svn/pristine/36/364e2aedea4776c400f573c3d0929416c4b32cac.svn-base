#content_area {
	width:1080px;
}
#settings {
	margin:0 0 0 90px;
	width:900px;
}
#settings ul li {
	margin:3px 0;
}
#settings label {
	width:500px;
	margin: 0 5px 0 0;
	display: inline-block;
	text-align: right;
	font-size:0.7em;
}
#settings input {
	margin:0 0 0 5px;
}
#settings input.error {
	border:1px solid red;
	background-color:#fff3f3;
}
#settings h3, h2 {
	margin: 50px 0 0 0;
	padding:0;
	background-color:transparent;
	color:#df6330;
	text-shadow:none;
	height:auto;
}
#settings h2 {
	font-size:25px;
}
#settings h3 {
	font-size:20px;
}
#settings p {
	background-color: #F1F3F5;
	border-top: 1px solid #c0c0c0;
	margin:10px 0;
	padding:3px 7px;
	font-size:15px;
	font-family: ubuntu;
}

div.drive_traffic label {
    width:auto !important;
    margin-left: 10px !important;
}

.drive_traffic select {
    margin-right: 10px;
}

.drive_traffic {
    margin:5px;
}