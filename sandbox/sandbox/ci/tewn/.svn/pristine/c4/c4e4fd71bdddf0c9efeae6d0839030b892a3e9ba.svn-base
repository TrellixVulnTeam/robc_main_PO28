<?php

require_once 'ciexception.php';
require_once 'logger/storage/interface.php';
require_once 'logger/interface.php';
require_once 'logger.php';

class LoggerTest extends PHPUnit_Framework_TestCase
{
	public function testCreation()
	{
		$logger = new Logger(new Loger_Storage_Fake());
		$this->assertTrue($logger->log('Hello World'));
	}
}

class Loger_Storage_Fake implements Logger_Storage_Interface
{
	public function save($message)
	{
		return true;
	}
}

