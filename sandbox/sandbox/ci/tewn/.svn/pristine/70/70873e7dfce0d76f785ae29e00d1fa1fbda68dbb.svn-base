(function($) {
    "use strict";
    $(function () {
        // Powered by show and hide account option
        $("input[id$='show_powered']").live("change", function() {
            if ($(this).is(":checked")) {
                $(this).parent().parent().parent().find(".account-id").addClass("visible");
            } else {
                $(this).parent().parent().parent().find(".account-id").removeClass("visible");
            }
        });

        $("select[id$='version']").live("change", function() {
            var parent = $(this).parent().parent().parent();

            if (2 == $(this).val()) {
                parent.find("input[id$='show_powered']").attr('checked', false).attr('disabled', 'disabled');
                parent.find(".account-id").removeClass("visible");
            } else if (1 == $(this).val()) {
                parent.find("input[id$='show_powered']").removeAttr('disabled', '');
            }
        });
    });
}(jQuery));