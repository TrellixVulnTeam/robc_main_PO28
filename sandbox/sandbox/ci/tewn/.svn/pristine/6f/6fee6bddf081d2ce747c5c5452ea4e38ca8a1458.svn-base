body{
    background-color: #DAE1DC;
}
div#header{
    background-color: #FFF;
    border-bottom: 1px solid #BBB;
    box-shadow:         0px 1px 5px 0px #BBB;
    -webkit-box-shadow: 0px 1px 5px 0px #BBB;
    -moz-box-shadow:    0px 1px 5px 0px #BBB;
}

#powerby{
    bottom: -19px;
    margin-bottom: 15px;
}

#powerby span{
    color: #888;
}

.card {
    box-shadow: 0px 3px 5px 0px #666;
    -webkit-box-shadow: 0px 3px 5px 0px #666;
    -moz-box-shadow: 0px 3px 5px 0px #666;
}

#footer {
    background: none repeat scroll 0 0 #666;
    border-top: 1px solid #333333;
    box-shadow: 0 -1px 5px #333;
    color: #000;
    width: 100%;
    clear: both;
    font-size: 12px;
    margin-top: 8px;
    margin-left: auto;
    margin-right: auto;
}

#footer a {
    color: #000;
    text-decoration: underline;
}
@media (max-width: 1250px) {
    .ad_leaderboard {
        display: none;
    }
}

@media (max-width: 610px) {
    #powerby{
        display: none;
    }
}

@media (max-width: 325px) {
    .logo_link img{
        width: 190px;
        height: 35px;
    }

    #powerby{
        bottom: -10px;

    }
}

.flame:after {
    border-left-color: #23B5C4;
}

.article-page .article-information .byline a {
    color: #23B5C4;
}

.article-page .article-information a.button {
    background-color: #23B5C4;
}