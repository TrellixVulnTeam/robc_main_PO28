#header {
    position: relative;
    z-index: 20;
    -mz-box-shadow: 0px 0px 29px 0px #030303 !important;
    -webkit-box-shadow: 0px 0px 29px 0px #030303 !important;
    box-shadow: 0px 0px 29px 0px #030303 !important;
}

.article-page {
    text-align: center;
    position: relative;
    box-shadow: inset 1px 4px 9px -6px;
}

.article-page .image {
    width: 100%;
    max-height: 370px;
    background: #13171B no-repeat center center;
    overflow: hidden;
}

.article-page .flame {
    position: absolute;
    right: 20px;
    top: 0;
}

.article-page .article-wrapper {
    background-color: white;
    margin: 0 20px;
    box-shadow: 0px 3px 5px 0px #8F8F8F;
    -webkit-box-shadow: 0px 3px 5px 0px #8F8F8F;
    -moz-box-shadow: 0px 3px 5px 0px #8F8F8F;
}

.article-information {
    max-width: 960px;
    margin: 0 auto;
    position: relative;
    top: -26px;
    padding: 0 20px;
}

.article-information .headline {
    margin-bottom: 10px;
}

.article-information .headline h1 {
    background-color: #13171B;
    color: white;
    padding: 3px 0px;
    display: inline;
    font-size: 18px;
    font-family: arial;
    box-shadow: 10px 0 0 #13171B, -10px 0 0 #13171B;
    line-height: 28px;
}

.article-information .byline {
    margin: 20px 0;
    font-style: italic;
    color: #2F404F;
}

.article-information .byline a {
    text-decoration: none;
    color: #D7562B;
}

.article-information .body-text {
    text-align: left;
    line-height: 1.5em;
    color: #2F404F;
    margin-bottom: 20px;
    font-family: arial;
}

.article-information a.button {
    background-clip: padding-box;
    background-color: #d7562b;
    border-radius: 15px;
    display: inline-block;
    margin-left: 15px;
    padding: 8px 20px;
    -moz-background-clip: padding;
    -moz-border-radius: 15px;
    -webkit-background-clip: padding-box;
    -webkit-border-radius: 15px;
    color: #FFFFFF;
    text-decoration: none;
    font-family: "Arial";
    font-size: 14px;
    text-transform: uppercase;
    font-weight: bold;
}

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) {
    .article-information .headline h1 {
        font-size: 24px;
    }

    .article-information {
        top: -30px;
    }
}

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) {
    .article-information .headline h1 {
        font-size: 28px;
    }
}

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) {
    .article-information .headline h1 {
        font-size: 32px;
        line-height: 44px;
    }

    .article-information {
        top: -43px;
    }
}
