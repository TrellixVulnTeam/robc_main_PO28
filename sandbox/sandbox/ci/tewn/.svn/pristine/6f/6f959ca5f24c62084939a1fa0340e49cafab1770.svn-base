<?php
App::import('Component', 'CIAbstract');

class CIReportsSidebarComponent extends CIAbstractComponent
{
    protected function initView()
    {
        $this->view = 'components/stats/sidebar';
    }

    protected function process(){
        return array(
            'options' => array(
                'name'           => $this->options->get('name'),
                'id'             => $this->options->get('id'),
                'title'          => $this->options->get('title', 'Hubs'),
                'icon'           => $this->options->get('icon', 'glyphicon-th-list'),
                'current_report' => $this->options->get('current_report', ''),
            )
        );
    }
}
