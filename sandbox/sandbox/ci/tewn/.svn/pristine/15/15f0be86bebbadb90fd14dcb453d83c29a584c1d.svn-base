$(document).ready(function() {
    $('.selectpicker').selectpicker();

    $('.btn-website-widget-analytics-select').on('click', function() {
        var website = $('#CIWebsitesSelect').val();
        var visible = $('#visibles option:selected').val();
        var type    = $('#type option:selected').val();
        $(this).attr('href', '/developers_reports/website_widget_analytics/' + visible + '/' + type + '/' + website);
    });

    $('[data-toggle="tooltip"]').tooltip();

    var $wa_table = $("#wa_table");
    if ($wa_table.is('table')) {
        $wa_table.tablesorter({
            headers: {
                0: {
                    sorter: false
                },
                1: {
                    sorter: false
                },
                9: {
                    sorter: false
                },
                12: {
                    sorter: false
                }
            },
            sortList: [
                [6, 1]
            ]
        });
    }
});