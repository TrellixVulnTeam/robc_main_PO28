<?php

namespace CI\Stats\Widget;

abstract class Adapter extends \CI\Model\Cake
{
    abstract public function getStats($nWidgetId, $sStartDate, $sEndDate);
    abstract public function getStatsByWebsite($nWebsiteId, $sStartDate, $sEndDate);

    public function getEmptyStats()
    {
        $aFields = array(
            'display', 'incoming',
            'display_basic', 'display_contextual', 'display_similar', 'display_tag',
            'incoming_basic', 'incoming_contextual', 'incoming_similar', 'incoming_tag',
        );
        return array_fill_keys($aFields, 0);
    }
}