#body,
#header #wrapper{
    margin-left: auto;
    margin-right: auto;
}

#header #wrapper{
    padding: 10px 0;
    overflow: hidden;
    display: table;
    width: 100%;
}

#header #logo
{
    display: inline-block;
    /*vertical-align: middle;*/
    float: left;
    position: relative;
}

.logo_link{
    display: inline-block;
}

#powerby {
    display: inline-block;
    position: relative;
}

#powerby span{
    font-size: 12px;
}

.masonry-wrapper {
    margin: 0 40px;
}

#body{
    margin-top: 15px;
}

.card
{
    background-color: #fff;
    float: left;
    margin-bottom: 15px;
}

.card:hover .plus{
    display: none;
}

.card:hover .full{
    display : block;
}

.card:hover .bar{
    display : block;
    transition: width 0.13s linear;
    width:105px;
}

.card:hover .image img{
    filter: alpha(opacity=67);
    opacity: 0.67;
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=67)";
    -moz-opacity: 0.67;
    -khtml-opacity: 0.67;
}

.bar{
    background-color: #d7562b;
    border-radius: 12px;
    float:left;
    font-weight: bold;
    height: 23px;
    margin-left: 15px;
    overflow: hidden;
    position: relative;
    text-align: center;
    top:-11px;
    width: 23px;
    -moz-border-radius: 12px;
    -webkit-border-radius: 12px;
}

.page_link{
    color: inherit;
    text-decoration: none;
}

.bar .plus,
.bar .full{
    color: #FFFFFF;
    font-family: 'Roboto';
}

.bar .plus{
    font-size: 16px;
    position: relative;
}

.bar .full {
    display: none;
    font-size: 12px;
    position: relative;
    top:3px;
}
.card .image{
    overflow: hidden;
}

.card .image img {
    height: 166px;
    width: 200px;
}

.card .box {
    background-color: #fff;
    width: 200px;
}

.card .ads{
    height: 250px;
    text-align: center;
}

.card .word{
    text-align: center;
    font-size: 11px;
    font-style: "Arial";
    color: #9b9c9f;
    margin-bottom: 3px;
    margin-top: 3px;

}

.clicked_page .box {
    width: 410px;
}

.ads_container {
    width: 300px;
}

.clicked_page .image img {
    height: 333px;
    width: 410px;
}

.page,
.page .description {
    font-family: Arial;
}

.page {
    font-size: 14px;
    padding: 0 15px;
    clear: both;
    position: relative;
    bottom: 8px;
}

.page .title{
    font-family: 'Roboto';
    font-size: 16px;
    font-weight: bold;
}

.page .description{
    font-size: 12px;
    margin-top: 5px;
    word-wrap: break-word;
}

.flame:after{
    border-bottom: 8px solid transparent;
    border-left-style: solid;
    border-left-color: #d7562b;
    border-left-width: 32px;
    content: " ";
    display: block;
    height: 47px;
    left: 0;
    top:0;
}

.flame img{
    left:7px;
    position: absolute;
    top:13px;
}

.flame{
    position: absolute;
    right: 12px;
    top:-2px;
    z-index: 10;
}

.box_flame{
    float: right;
    margin-right: 12px;
}

.ad_leaderboard{
    display: inline-block;
    text-align: right;
    width: 728px;
    height: 95px;
    position:relative;
    float: right;
}

.loading{
    background-image:url('/img/ajax-loader2.gif');
    background-repeat: no-repeat;
    width: 220px;
    height: 30px;
    margin:40px auto;

}

.new_clicked_page{
    height:250px;
}

.new_clicked_page .page{
    padding: 0;
    position: absolute;
}

.new_clicked_page .description{
    display: none;
}

.new_clicked_page .title{
    position: absolute;
    bottom: 24px;
    background-color: #000;
    color: #fff;
    width: 280px;
    left:5px;
    padding: 5px;
}

@media (max-width: 630px) {
    .clicked_page,
    .clicked_page .image,
    .clicked_page .image img
    {
        width: 300px;
    }

    .clicked_page .title {
        font-size: 12px;
        padding: 3px;
        text-align: center;
    }

    .clicked_page .image,
    .clicked_page .image img{
        height: 250px;
    }

    .clicked_page .page{
        padding: 0 7px;
    }

    .clicked_page .description{
        display: none;
    }

    .clicked_page .bar{
        top: 11px;
    }

    .clicked_page .full{
        font-size: 11px;
    }

    .masonry-wrapper {
        margin: 0 20px;
    }
}

@media (max-width: 940px) {
    .ad_leaderboard{
        display: none;
    }
}