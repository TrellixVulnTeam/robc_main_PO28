<style>
/* List */
.container_12 .grid_12 {
	width: 1080px;
}

.grid_12 .grid_3 {
	width: 380px;
	float: right;
}

.container_12 .grid_5 {
	width: 540px;
}

.grid_12 .grid_5 img {
	-moz-border-radius:6px;
	-webkit-border-radius:6px;
	border-radius:6px;
}

.grid_7 .image, .grid_5 .image {
	float: left;
	width: 140px;
	height: 80px;
}

.grid_7 .text, .grid_5 .text{
	padding: 20px;
}

.grid_12 .grid_3 img {
	width:300px;
	height:170px;
	-moz-border-radius:6px;
	-webkit-border-radius:6px;
	border-radius:6px;
}

.grid_12 .grid_3 .image {
	vertical-align: top;
	width:300px;
	height:170px;
	-moz-border-radius:6px;
	-webkit-border-radius:6px;
	border-radius:6px;
	clear: right;
	margin-left: auto;
	margin-right: auto;
}

.grid_12 .grid_3 .text {
	margin-left: auto;
	margin-right: auto;

}


.grid_3 .item {
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	border: 1pt solid #cccccc;
	padding: 10px;
	height: auto;
	overflow: hidden;1
	margin: 5px;
	margin-bottom: 15px;
	-moz-box-shadow: 0 1px 3px #999;
	-webkit-box-shadow: 0 1px 3px #999;
}

.grid_5 .item {
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	border: 1pt solid #cccccc;
	padding: 10px;
	height: 80px;
	overflow: hidden;1
	margin: 5px;
	-moz-box-shadow: 0 1px 3px #999;
	-webkit-box-shadow: 0 1px 3px #999;

}

</style>
<script>
$(function() {
	var offset = $(".grid_3").first().offset();
	var sidebar_height = $(".grid_3").first().height();
	var window_height = $(window).height();
	var padding = 15;
	var height_from_top = $(".grid_5").first().offset().top + $(".grid_5").first().height();
	var elem = $(".grid_3");

	if (($(".grid_3").first().offset().top + $(".grid_3").first().height() <= height_from_top)) {
		$(".grid_3").first().stop().animate({
			marginTop: height_from_top - sidebar_height - offset.top
		});
	}

	if (($(window).scrollTop() + window_height) < $(document).height() - offset.top) {
		if (($(window).scrollTop() + window_height) > (offset.top + sidebar_height)) {
    		$(".grid_3").first().stop().animate({
        		marginTop: $(window).scrollTop() - offset.top - (sidebar_height - window_height)
    		});
		} else {
    		$(".grid_3").first().stop().animate({
        		marginTop: 0
    		});
		}
	}

	if (sidebar_height > window_height) {
		$(window).scroll(function() {
			
			// if grid_3 not exceed the bottom of the grid_5
			if (($(".grid_3").first().offset().top + $(".grid_3").first().height() <= height_from_top)) {
				$(".grid_3").first().stop().animate({
					marginTop: height_from_top - sidebar_height - offset.top
				});
			}

			if (($(window).scrollTop() + window_height) < $(document).height() - offset.top) {
        		if (($(window).scrollTop() + window_height) > (offset.top + sidebar_height)) {
            		$(".grid_3").first().stop().animate({
                		marginTop: $(window).scrollTop() - offset.top - (sidebar_height - window_height)
            		});
        		} else {
            		$(".grid_3").first().stop().animate({
                		marginTop: 0
            		});
        		}
			}
    	});
	} else {
    	$(window).scroll(function() {
        	if ($(window).scrollTop() > offset.top) {
            	$(".grid_3").first().stop().animate({
                	marginTop: $(window).scrollTop() - offset.top + padding
            	});
        	} else {
            	$(".grid_3").first().stop().animate({
                	marginTop: 0
            	});
        	};
    	});
	}
});
</script>