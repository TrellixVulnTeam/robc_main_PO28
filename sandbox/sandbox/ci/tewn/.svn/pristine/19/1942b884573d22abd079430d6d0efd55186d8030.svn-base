body{
    background-color: #D9D8E5;
}
div#header{
    background-color: #FFF;
    border-bottom: 1px solid #BBB;
    box-shadow:         0px 1px 5px 0px #BBB;
    -webkit-box-shadow: 0px 1px 5px 0px #BBB;
    -moz-box-shadow:    0px 1px 5px 0px #BBB;
}

#powerby{
    bottom: -14px;
    margin-bottom: 15px;
}

#powerby span{
    color: #888;
}

.card {
    box-shadow: 0px 3px 5px 0px #666;
    -webkit-box-shadow: 0px 3px 5px 0px #666;
    -moz-box-shadow: 0px 3px 5px 0px #666;
}

#footer {
    background: none repeat scroll 0 0 #666;
    border-top: 1px solid #333333;
    box-shadow: 0 -1px 5px #333;
    color: #000;
    width: 100%;
    clear: both;
    font-size: 12px;
    margin-top: 8px;
    margin-left: auto;
    margin-right: auto;
}

#footer a {
    color: #000;
    text-decoration: underline;
}

@media (max-width: 1244px) {
    .ad_leaderboard{
        display: none;
    }
}

@media (max-width: 410px) {
    #powerby{
        display: none;
    }
}