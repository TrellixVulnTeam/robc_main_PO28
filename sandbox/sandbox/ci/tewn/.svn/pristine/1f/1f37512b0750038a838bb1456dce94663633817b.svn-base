var ci = ci || { };

ci.namespace = function( ) {
    var o, d;

    $.each(arguments, function(v) {
        d = arguments[1].split(".");
        o = window[d[0]] = window[d[0]] || {};
        $.each(d.slice(1), function(v2){
            o = o[arguments[1]] = o[arguments[1]] || {};
        });
    });

    return o;
}

ci.isUndefined = function(value) {
    return typeof(value) == 'undefined';
}

ci.isNumber = function(value) {
  return false == isNaN(value) && typeof value == 'number';
};

ci.isFunction = function(value) {
    return typeof value == 'function';
};

ci.isArray = function(value) {
    return typeof value == 'Array';
};

ci.isObject = function(value) {
    return ci.isArray(value) === false && typeof value == 'object';
};

ci.isString = function(value) {
  return typeof value == 'string';
};