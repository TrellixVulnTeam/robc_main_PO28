<?php

namespace Test\Validator\Excel;

/**
 * @group Excel
 */
class OptionsTest extends \PHPUnit_Framework_TestCase
{
    /**
     * @dataProvider getTests
     */
    public function testOptions($mOption, $bExpected)
    {
        $oFormats = new \CI\Validator\Excel\Options();
        $bResult = $oFormats->isValid($mOption);
        $this->assertEquals($bExpected, $bResult);
    }

    public function getTests()
    {
        return array(
            array(\CI\Excel\Settings::OPTION_CREATOR, true),
            array(\CI\Excel\Settings::OPTION_TITLE, true),
            array(\CI\Excel\Settings::OPTION_FONT_STYLE, true),
            array(\CI\Excel\Settings::OPTION_FONT_SIZE, true),
            array(\CI\Excel\Settings::OPTION_FORMAT, true),
            array(\CI\Excel\Settings::OPTION_FORMAT, true),
            array(\CI\Excel\Settings::OPTION_COLUMNS, true),
            array(\CI\Excel\Settings::OPTION_ALIGNMENT, true),
            array('where are youuuuuu', false),
            array('-name-', false)
        );
    }
}