.grid_1 { width:80px; }
.grid_2 { width:170px; }
.grid_3 { width:260px; }
.grid_4 { width:350px; }
.grid_5 { width:440px; }
.grid_6 { width:530px; }
.grid_7 { width:620px; }
.grid_8 { width:610px; }
.grid_9 { width:800px;  clear: right;}
.grid_10 { width:890px; }
.grid_11 { width:980px; }
.grid_12 { width:1070px; }
.grid_13 { width:320px; }

.column {
	margin: 0 3px;
	overflow: hidden;
	float: left;
	display: inline;
}
.row {
	width: 1080px;
	margin: 0 auto;
	overflow: hidden;
}
.row .row {
	margin: 0 -5px;
	width: auto;
	display: inline-block;
}