body {
	margin: 0;
	padding: 0;
	background: url("http://cdn.crowdignite.com/img/teenspot/background2.jpg") no-repeat scroll 50% 0 #F3F8FE;
	color: #fff;
	font: 12px Ubuntu,Arial,Helvetica,sans-serif;
	min-width: 980px;
}

img {
	border: none;
}

#navbar
{
	background-color: #c13d55;
	width:1024px;
	margin-left: auto;
	margin-right: auto;
}

#header { 
	margin-left: auto;
	margin-right: auto;
        height: 146px;
}
#header>a { height:110px!important; }
.text { 
	display: table;
	height: auto;
	overflow: visible;
}

.text a { 
	color: #393939;
	font-size: 18px;
	font-weight: 700;
	text-decoration: none;
	vertical-align: middle;
}

.text a:hover { 
	font-size: 18px;
	font-weight: 700;
	text-decoration: underline;
	vertical-align: middle;
}

#links
{
	margin-left:30px;
	height:30px;
	font-size:18px;
	color: #ffffff; 
	text-shadow: 3px 3px 7px #111;
}
#links_content {
    border-radius:0 0 0 0!important;
    border:none;
}

/* MAIN NAVIGATION */
.main {
	position: relative;
        /*padding-top: 130px;*/
}

.bottom_content_spacer
{
	-moz-border-radius:0 0 28px 28px ; 
	-webkit-border-radius:0 0 28px 28px ;
	border-radius:0 0 28px 28px ;   
	min-height: 5px;
	behavior: url(/css/PIE.htc);
	width: 100%;
	background: url("http://cdn.crowdignite.com/img/teenspot/bg-foot-wide.gif") repeat-x scroll center top #FF7E0F;
	margin-left: -8px;
	margin-bottom: 10px;
}

#paginate
{ 
	color: #FFF;
	font-weight: bold;
	font-size: 20px;
	padding-top: 10px;
	padding-bottom: 15px;
}
#paginate a
{ 
	color: #FFF;
	font-size: 20px;
	font-weight:bold;
	text-decoration: underline;
}
#footer
{
	background: #c0c0bf;
	clear: both;
	padding: 10px 3px 10px 4px;
	color: #000000;
	font-size: 12px;
	border-top: 1px solid #000000;
	margin: 0 auto;
	width: 964px;
	border-top: solid 1px #7AC5FF;
	background: url("http://cdn.crowdignite.com/img/teenspot/footer-bg.png");
	color: #99EBFF;
}

#footer a {
	color: #fff;
	text-decoration: none;
	font-weight: bold
}

#footer a:hover {
	color: #fff;
	text-decoration: underline
}

#header .panel {
	background: url("http://cdn.crowdignite.com/img/teenspot/nav-header.png") no-repeat scroll 0 0 transparent;
	border: medium none;
	padding: 3px 0 0;
	width: 971px;
	margin-left: auto;
	margin-right: auto;
}
#nav {
	height: 29px;
	overflow: hidden;
	padding: 0 0 4px 10px;
	margin-bottom: 0px;
}
#nav li {
	background: url("http://cdn.crowdignite.com/img/teenspot/sep-1.gif") no-repeat scroll 0 2px transparent;
	float: left;
	font-size: 18px;
	font-weight: 700;
	height: 29px;
	line-height: 20px;
	padding: 0 0 0 2px;
	list-style: none;
}
#nav li:first-child {
	background: none repeat scroll 0 0 transparent;
}
#nav li a {
	color: #FFFFFF;
	display: block;
	padding: 0 0 0 6px;
	text-decoration: none;
}
#nav li span {
	display: block;
	padding: 4px 11px 5px 8px;
}
#nav .active a, #nav li a:hover {
	background: url("http://cdn.crowdignite.com/img/teenspot/bg-nav-h-l.png") no-repeat scroll 0 0 transparent;
}
#nav .active span, #nav li a:hover span {
	background: url("http://cdn.crowdignite.com/img/teenspot/bg-nav-h-c.png") repeat-x scroll 0 0 transparent;
}

.item { 
	background-color: #FFF;
}

.alt { 
	background-color: #FFF;
}

#interior_content { 
	margin-top: 0;
}


/* signup */
div.row { width:970px; margin:0 auto; }
div.row #content { background: #D0ECFF; margin:0 auto; padding: 10px 20px; width: 930px; }
div.row #content ul { 
    background:#fff;
    -moz-border-radius: 10px; /* Firefox */
    -webkit-border-radius: 10px; /* Safari, Chrome */
    border-radius: 10px; /* CSS3 */
}
div.main #content form div.submit { padding-left:125px; text-align:left;}
div.main #content form div.submit input{
    background: url(/img/teenspot/btnsignup.png) no-repeat;
    border:none;
    height: 69px;
    margin-top:10px;
    text-indent: -9999px;
    width:282px;
}
div.main #content form div.submit input:hover {
    background-position:0 -68px;
}
/* Eo signup */

h3.topContent { display: none; }
div.row #content ul, div.main  #content li { list-style: none;  }
div.row #content .column { width:910px; }
div.row #content .column  div#footer { border:0; background:none!important; }
div.submit { text-align: center; }
div.submit input:hover {
    background-position:0 -68px;
}
#create_form ul li.last {
    height: 7em!important;
    padding-bottom:2em!important;

}
div.row #content ul {
    background:#fff;
    box-shadow:0 1px 3px #999999;
    -moz-border-radius: 3px; /* Firefox */
    -webkit-border-radius: 3px; /* Safari, Chrome */
    border-radius:3px; /* CSS3 */
}
/* signup 2 part */
#create_form {  position:relative;}
#create_form ul { padding-top:20px; }
#create_form .title {
    width:95%;
    margin:10px auto 10px;
    padding:10px 0;
    /*border-bottom:1px solid #ccc;*/
}
#create_form .title h2 {
    background:url(/img/crowdignite/ci_fire_icon.png) no-repeat 0 5px;
    color:#333;
    display:block;
    margin:0;
    padding:0 0 0 25px;
    font-size:27px;
    letter-spacing: -0.05em;
}
#create_form .title p {
    color:#666;
    font-size:14px;
    line-height: 1em;
    margin:2px 0 10px 0;
    padding-left:25px;
    text-align:left;
}
#create_form div.control {
    position:relative;
    display:block;
    float:left;
    line-height:2em;
    margin:0;
    padding:0;
}
#create_form label.error {
    background:#FFF2BF url(/img/crowdignite/icon_deny.png) no-repeat 5px 5px;
    border:1px solid #e5d595;
    color:#900;
    display:block;
    font-size:14px;
    line-height:1.1em;
    margin:0;
    padding:6px 0 6px 29px;
    position: absolute;
    text-align:left;
    top: 0;
    left:280px;
    width: 350px;
    z-index: 100;
}
#create_form ul {
    width: 100%;min-height:400px;
}
#create_form ul li {
    width:95%;
    margin:0 auto;
}
#create_form ul.form>li {
    height:3em;
    padding:1em 0 0.2em 0;
}
#create_form ul.form>li>label {
    color:#333;
    float:left;
    line-height:2em;
    margin:0;
    padding:0 30px 0 0;
    text-align:right;
    width:120px;
}
#create_form ul.form li span.terms {
    color:#333;
    font-size:14px;
    display: inline-block;
    padding-left:8px;
}
#create_form ul.form li label.terms a { color:#333!important; text-decoration: underline; }
#create_form ul li.alt {
    background:#fff;
}
#create_form ul li.focus_line {
    background:#fdf7df;
}
#create_form div.join_text {
    position:absolute;
    right:30px;
    text-align:left;
    top:110px;
    width:380px;
}
#create_form div.join_text #img_what_is_ci {
    background: url("/img/crowdignite/what_is_ci.png") no-repeat;
    display: inline-block;
    height: 205px;
    margin:10px -10px 0 0;
    width: 374px;
}
#create_form div.join_text h2 {
    color:#E26832;
    font-size: 25px;
    letter-spacing:-0.03em;
    padding:0;
}
#create_form div.join_text p {
    color:#333;
    font-size:14px;
    width:90%;
}
#create_form div.join_text p a {
    color:#E26832;
    text-decoration:none;
}