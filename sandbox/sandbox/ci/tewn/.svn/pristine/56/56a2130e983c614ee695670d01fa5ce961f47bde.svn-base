<span class="title">Select a Third Party Content</span>
<div class="content">
    <form id="third-party-search">
        <input type="text" name="search" class="medium">
        <label>
            Limit:
            <input type="text" name="limit" class="small" value="10">
        </label>
        <input name="page" type="hidden" value="1" />
        <input class="btn" type="submit" value="Search" />
    </form>
    <div class="table_container">
        <div class="third-party-content"></div>
        <div class="options">
            <a href="#" class="btn save">Submit</a>
            <a href="#" class="btn exit">Close</a>
        </div>
    </div>
</div>

<script id="tpl-third-party" type="text/x-handlebars-template">
    <div class="response">
        <form id="third-party-form">
        {{#each providers}}
        <label>
            <input type="radio" {{#if @first}}checked="true"{{/if}} data-name="{{ name }}" name="third-party-value" value="{{ id }}">
            <span>{{ name }}</span>
        </label>
        {{/each}}
        </form>
    </div>
    <div class="pagination">
        {{#if navigation.previous}}
        <a href="#" class="third-party-previous">‹ Previous</a>
        {{/if}}
        {{#if navigation.next}}
        <a href="#" class="third-party-next">Next ›</a>
        {{/if}}
    </div>
</script>