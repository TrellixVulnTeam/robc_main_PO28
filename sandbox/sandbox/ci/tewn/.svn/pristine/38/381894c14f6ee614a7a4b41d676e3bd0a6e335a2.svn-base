<style>
/* small_grid */
.grid_7,.grid_5 { float:none; margin:0; }
.container_12 .grid_12 {
    width: 1080px;
}
.container_12 .grid_5,
.container_12 .grid_7 > .grid_7,
.container_12 .grid_5 > .grid_5 {
	width: auto;
	margin:0;
}
#links_content {
	margin-left: 10px;
	margin-top: 0px;
	padding-bottom: 10px;
	padding-top: 10px;
        padding-left:25px;
	border-radius:0;	
	-moz-border-radius:0;
	-webkit-border-radius:0;
        width:1003px;
}
.grid_12 .grid_5 img {
	border-radius:0;	
	-moz-border-radius:0;
	-webkit-border-radius:0;
}
/* all boxes */
.item {
        background-color: #FFFFFF;
        border-radius: 2px;
        -moz-border-radius: 2px;
        -webkit-border-radius: 2px;
        box-shadow: 1px 1px 3px #999999;
        -moz-box-shadow: 1px 1px 3px #999999;
        -webkit-box-shadow: 1px 1px 3px #999999;
        float:left;
        font-family:Arial, Helvetica, sans-serif;
        height: 145px;
        margin:12px 11px!important;
        overflow: hidden;
        padding: 5px;
        cursor: pointer;
        width: 210px;
}
.item:hover {
        background-color: #E6E6E6;
        border: 1px solid #B3B3B3;
        padding: 4px;
}
.item .image {
        border-radius:0!important;
        -moz-border-radius: 0!important;
        -webkit-border-radius: 0!important;
        display: block;
        height: 105px;
        overflow: hidden;
        width: 210px;
}
.item .image a {
        display:block;
}
.item .image img{
        border:0;
        height:auto; /* 145px; */
        width:210px;
}
.item div.text p{
        color: #209E9C;
        font-size: 15px;
        font-weight: 700;
        line-height: 1.2em;
        margin:4px 0 0 0;
}
.item div.text p a{
        border:0;
        color: #333!important;
        display: block;
        font-size:15px;
        font-weight: bold;
        max-height: 38px;
        max-width: 210px
        overflow: hidden;
        text-decoration: none;
        width:200px;
}
.item div.text p a:hover { color:black; }

/* large items */
.grid_12 .large_item {
        height: 324px;
        width: 450px;
        display:block;
}
.grid_12 large_item div.text p {
        font-size: 22px !important;
        line-height: 24px !important;
}
.grid_12 .large_item .image img {
        border:0;
        width:450px!important;
        height:auto;
}
.grid_12 .large_item .image,
.grid_12 .large_item .image a  {
        width: 450px!important;
        height: 250px!important;
}
.grid_12 .large_item div.text {
    width:446px;
}                
.grid_12 .large_item div.text p a {
        border:0;
        border-bottom:1px dotted #ddd!important;
        color: #333;
        font-size: 22px!important;
        line-height: 24px!important;
        line-height:1.2em!important;
        max-height: 50px;
        max-width: 450px;
        overflow: hidden;
        padding-bottom:5px;
        padding-left:5px;
        text-decoration: none;
        width:440px;
}
.bottom_content_spacer { margin-bottom:15px; }
.grid_12>.grid_7 {
    height:auto;
    width:auto;
    display:inline;
}
</style>

<script src="/js/jquery.masonry.min.js"></script>
<script>
  $(function(){
    $('#links_content').masonry({
      itemSelector: '.item',
      columnWidth: 1,
	  isAnimated: true,
	  animationOptions: {
		duration: 300,
		easing: 'linear',
		queue: false
	  }
    });
    $('#links_content div:first-child .item:first-child').addClass('large_item');
    $('#links_content').masonry( 'reload' );
    $('#links_content .item').click(function() {
        if( !$(this).hasClass('large_item') ) {
            $('#links_content .item').removeClass('large_item');
            $(this).addClass('large_item');
            $('#links_content').masonry( 'reload' );
            return(false);
        }
    });
  });
</script>