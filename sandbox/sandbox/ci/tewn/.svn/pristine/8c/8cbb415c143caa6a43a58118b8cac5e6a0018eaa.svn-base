<?php
App::import('Component', 'CIAbstract');

abstract class CIDemographicComponent extends CIAbstractComponent
{
    private $aDemographic;

    public function setDemographic()
    {
        $oDemographic       = new \CI\Demographic();
        $this->aDemographic = $oDemographic->getAll();
    }

    public function process()
    {
        $this->setDemographic();

        return array(
            'list'    => $this->aDemographic,
            'options' => array(
                'demographic_id' => $this->options->get('demographic_id'),
                'name'           => $this->options->get('name'),
                'id'             => $this->options->get('id')
            )
        );
    }
}