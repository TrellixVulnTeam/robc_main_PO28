$('.btn-fix-widget-analytics').on('click', function() {
    var $btn            = $(this).button('loading');
    var website_id      = $(this).data('website-id');
    var domain_bitfield = $(this).data('domain-bitfield');

    $.get('/developers_reports/action/fix_wrong_widget_analytics', {
        website_id: website_id,
        domain_bitfield: domain_bitfield
    }, function (data) {
        $btn.button('reset');
        var $tr = $('#row-' + website_id + '-' + domain_bitfield);
        $tr.addClass('success');
        $tr.fadeOut(3000, function(){
            $(this).remove();
        });
    }, 'json');

    return false;
});