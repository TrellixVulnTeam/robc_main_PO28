<?php

namespace CI\Error\Dealer;
use CI\Error\Formatter\HTML;
use CI\Error\Formatter\PlainText;

/**
 * Dealer implementation that display erros in screen
 */
class Screen extends \CI\Error\Dealer
{
    /**
     * Factory method to create a screen dealer with HTML formatter
     */
    public static function createForHTML()
    {
        return new static(new HTML());
    }

    /**
     * Factory method to create a screen dealer with plain text formatter
     */
    public static function createForPlainText()
    {
        return new static(new PlainText());
    }

    /**
     * @see \CI\Error\Dealer::deal()
     * @codeCoverageIgnore
     */
    public function deal(array $sErrors)
    {
        parent::deal($sErrors);
        print_r($this->sMessage);
    }   
}