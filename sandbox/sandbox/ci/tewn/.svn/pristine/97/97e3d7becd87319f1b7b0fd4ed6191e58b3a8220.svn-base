<?php if (false === empty($pages)) : ?>
    <?php echo $paginator->counter(array('format' => '<span class="total-pages">Total pages: %count% (Selected: <span class="pages-selected">0</span>)</span>')); ?>
    <div class="response">
    <?php $c = 0; ?>
    <?php foreach ($pages as $page) : ?>
        <?php
            $alt = '';
            if($c%2) $alt = 'alt-row';
        ?>
        <label class="<?php echo $alt; ?>">
            <input type="checkbox" value="<?php echo $page['Page']['id']; ?>">
            <span class="image">
            <?php if (!empty($page['Page']['image'])) : ?>
                <img width="100" src="<?php echo $oImageAsset->getUrl(array('type' => \CI\Asset\Image::URL_CROP_FULL, 'image' => $page['Page']['image'], 'width' => 100, 'height' => 50, 'page_id' => $page['Page']['id'])); ?>"/>
            <?php else : ?>
                <img width="100" src="<?php echo CDN_URL; ?>/img/crowdignite/page_image_not_found.jpg"/>
            <?php endif; ?>
            </span>
            <span><?php echo $page['Page']['title']; ?></span>
        </label>
        <?php $c++; ?>
    <?php endforeach; ?>
    </div>
<div class="pagination">
<?php
        echo $paginator->first('« First', null, null, array('class' => 'disabled'));
        echo $paginator->prev('‹ Previous', null, null, array('class' => 'disabled'));
        echo '<div class="numbers">';
        echo $paginator->numbers(array('separator' => ''));
        echo '</div>';
        echo $paginator->next('Next ›', null, null, array('class' => 'disabled'));
        echo $paginator->last('Last »', null, null, array('class' => 'disabled'));
    endif;
?>
</div>