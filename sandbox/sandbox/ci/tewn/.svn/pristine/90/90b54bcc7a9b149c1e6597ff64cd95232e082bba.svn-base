class Service
{
    protected $oAdapter;

    public function __construct(\CI\Geo\Adapter $oAdapter)
    {
        $this->setAdapter($oAdapter);
    }

    public function setAdapter(\CI\Geo\Adapter $oAdapter)
    {
        $this->oAdapter = $oAdapter;
    }

    public function getCountry($sIpAddess)
    {
        return $this->oAdapter->getCountry($sIpAddess);
    }
}