<script type="text/javascript">
    var _sf_startpt=(new Date()).getTime();

    (function(){
        if (! Date.now) {
            Date.now = function(){
                return new Date().getTime();
            }
        }

        function appendPixel()
        {
            var img = document.createElement('img');
            img.src = "http://<?= CDN_URL ?>/img/l.gif?t="+ Date.now() + "&h=" + window.location.hostname + "&r=" + Math.floor((Math.random()*1000000)+1);
            img.setAttribute("style", "width:0px;height:0px;display:none;position:absolute");
            document.body.appendChild(img);
        }

        if (window.addEventListener) {
            window.addEventListener('load', appendPixel, false);
        } else {
            window.attachEvent('onload', appendPixel);
        }
    })();
</script>
