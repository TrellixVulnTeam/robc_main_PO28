<?php
class Feed extends AppModel {
    public $name      = 'Feed';
    public $belongsTo = 'Website';

    public $validate = array(
        'name' => array(
            'rule'    => 'notEmpty',
            'message' => 'Enter the name of the feed',
        ),
        'website_id' => array(
            'rule'    => array('comparison', '>', 0),
            'message' => 'Please select the website for the feed',
        ),
        'url' => array(
            'rule'    => array('url', true),
            'message' => 'Enter a valid url for the feed',
        ),
    );
}
?>