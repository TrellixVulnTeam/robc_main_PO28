<script type="text/x-handlebars-template" id="tpl-top-websites-credits">
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Top Increases/Decreases for {{ date }}</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
        {{#if up}}
            <ul class="list-group">
            {{#each up}}
                <li class="list-group-item">
                    <span class="label label-success pull-right">{{ credits }} <span class="fa fa-arrow-up"></span></span>
                    {{ name }}
                </li>
            {{/each}}
            </ul>
        {{else}}
            <div class="alert alert-info" role="alert">
                There is no record of the top websites with credits <span class="label label-success"><span class="fa fa-arrow-up"></span></span> <strong>increase</strong> in this date
            </div>
        {{/if}}
        </div>
        <div class="col-md-6">
        {{#if down}}
            <ul class="list-group">
            {{#each down}}
                <li class="list-group-item">
                    <span class="label label-danger pull-right">{{ credits }} <span class="fa fa-arrow-down"></span></span>
                    {{ name }}
                </li>
            {{/each}}
            </ul>
        {{else}}
            <div class="alert alert-info" role="alert">
                There is no record of the top websites with credits <span class="label label-danger"><span class="fa fa-arrow-down"></span></span> <strong>decrease</strong> in this date
            </div>
        {{/if}}
        </div>
    </div>
</div>
</script>