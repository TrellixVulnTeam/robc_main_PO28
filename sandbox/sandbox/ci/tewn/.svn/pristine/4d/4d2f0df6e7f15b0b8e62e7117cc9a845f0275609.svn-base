var ci = ci || {};

ci.Analytics = function(){
    var CATEGORY_OUTBOUND_LINKS  = 'Outbound Links';
    var CATEGORY_OUTGOING_DOMAIN = 'Outgoing Domain';

    var _oTracker;

    (function constructor(){
        _oTracker = window._gat._getTracker('UA-20708699-1');
    })();

    function track (sCategory, sUrl){
        _oTracker._trackEvent(sCategory, sUrl);
    };

    this.saveOutbooundLink = function(sUrl) {
        track(CATEGORY_OUTBOUND_LINKS, sUrl);
    };

    this.saveOutgoingDomain = function(sUrl) {
        var sDomain = sUrl.match(/:\/\/(.[^/]+)/)[1];
        track(CATEGORY_OUTGOING_DOMAIN, sDomain);
    };
};