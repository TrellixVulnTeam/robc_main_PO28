class WidgetTestCase extends CakeTestCase {
	var $Widget = null;
	var $fixtures = array('app.widget');

	function startTest() {
		$this->Widget =& ClassRegistry::init('Widget');
	}

	function testWidgetFind() {
		$this->Widget->recursive = -1;
		$results = $this->Widget->find('first');
		$this->assertTrue(!empty($results));

		$expected = array('Widget' => array(
			'id' => 1,
		'website_id' => 1,
		'widget_style_id' => 1,
		'status' => WIDGET_STATUS_ACTIVE,
		'name' => 'Right Column',
		'num_links' => 4,
		'width' => 300,
		'height' => 250,
		'image_width' => 120,
		'image_height' => 100,
		'rows' => 2,
		'columns' => 2,
		'powered' => 1,
		'last_used' => '2010-03-10 16:16:49',
		'created' => '2010-03-06 14:45:25',
		'visible' => 1
		));
		$this->assertEqual($results, $expected);
	}
}
