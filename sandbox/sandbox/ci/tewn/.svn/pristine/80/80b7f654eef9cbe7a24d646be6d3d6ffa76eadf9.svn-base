<?php

namespace CI\Report\Setting;

class Factory
{
    const TYPE_HUB     = 'report_by_hub';
    const TYPE_WEBSITE = 'report_by_website';

    /**
     * Factory for the report setting objects according to the
     * selected type
     *
     * @param string $type The type of the object to create
     *
     * @return CI\Report\Setting Created report setting object
     */
    public function createReportSetting($type)
    {
        $oReportSetting = null;

        switch ($type) {
            case self::TYPE_HUB :
                $oReportSetting = new Hub();
                break;
            case self::TYPE_WEBSITE :
                $oReportSetting = new Website();
                break;
        }

        return $oReportSetting;
    }
}