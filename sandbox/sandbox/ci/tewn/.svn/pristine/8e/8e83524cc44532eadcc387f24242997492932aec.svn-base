class InfoHelper extends AppHelper {
	
	function userNotes($user_id) {
		App::import('Model', 'Note');
		$model = new Note();
		$notes = $model->find('count', array(
			'conditions' => array('Note.user_id' => $user_id)
		));
		return $this->output($notes);
	}
}

