<script>

jQuery(document).ready(function() {
   $('#save_email').click(function(){
      var option = $(this).data('option') || 'edit';
      if (option == 'edit') {
        var email = $('#user_email').data('email');
        $(this).data('option', 'save');
        $(this).find('span.label').text('Save Email');
        $('#user_email').html('<span class="bold">Email:</span> <input type="text" value="'+ email +'"/>');
        $('#user_email input').select();
      } else {
        // validate the email
        var email = $('#user_email input').val();
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        if( !emailReg.test( email ) ) {
          alert('The email must be valid');
        } else {
          $.post('/users/change_email', {'email': email}, function(data){
            if (data.error) {
              alert('Error Ocurred: ' + data.error);
            } else {
              $('#save_email').data('option', 'edit').find('span.label').text('Change Email');
              $('#user_email').data('email', data.email);
              $('#user_email').html('<span class="bold">Email:</span> <a href="mailto:' + data.email + '">' + data.email + '</a>');
            }
          }, 'json');
        }
      }
   });

    /* Panes */
    jQuery(".hub_list li a").click(function() {
        jQuery(".hub_list li").removeClass('tab_selected');
        jQuery(this).parent().addClass('tab_selected');
        jQuery('.pane').hide();
        var pane_name = ".table_container div#"+ $(this).attr('class');
        jQuery(pane_name).fadeIn(); //css('display','inline-block');

    });
    jQuery('#user_settings').show();
});
</script>  
