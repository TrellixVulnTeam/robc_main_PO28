            '../library/../tests/resources/mnt/crowdignite/app5v-ci.ci.prd.lax.gnmedia.net/vwlogs/lppaidclick.log.20130816_12:00',
            '../library/../tests/resources/mnt/crowdignite/app6v-ci.ci.prd.lax.gnmedia.net/vwlogs/lppaidclick.log.20130816_12:00',
