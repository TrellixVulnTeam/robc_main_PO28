        $bResult = $this->oClicks->isInTimeFrame($nDate, $TimeFrame);

        $this->assertEquals($bExpected, $bResult);
    }

    /**
     * Testing the case of time stamp
     *
     * @return void
     */
    public function testTimeStam()
    {
        $bExpected = false;
        $this->oClicks = new ClicksMock('20120816_12:00');
        $nDate = 1376676001;
        $TimeFrame = 30 * 60;
        $bResult = $this->oClicks->isInTimeFrame($nDate, $TimeFrame);

        $this->assertEquals($bExpected, $bResult);
    }
