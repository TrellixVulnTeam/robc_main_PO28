@media only screen and (max-device-width: 480px) {
  .itemtext a
  {
    font-size: 150%;
  }

  .grid_4
  {
    display: none;
  }

  .row,
  .grid_8,
  .grid_12,
  .grid_6 > div
  {
    width: auto !important;
    float: none !important;
  }

  .grid_2 
  {
    width: auto;
    margin: 0 10px 0 0;
  }
  
  .paginate
  {
    display: inline-block;
    margin: .5em 0;
  }

  #footer 
  {
    font-size: 10px;
    display: block;
    margin: 0;
  }
}
