<script id="tpl-widgets-table" type="text/x-handlebars-template">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Website</th>
                        <th class="text-center">Widget Name</th>
                        <th class="text-center">Width</th>
                        <th class="text-center">Height</th>
                        <th class="text-center">CTR</th>
                        <th class="text-center">Incoming</th>
                        <th class="text-center">Display</th>
                        <th class="text-center">Created</th>
                        <th class="text-center">Last Used</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each widgets}}
                    <tr id="widget-{{widget_id}}" class="{{highlight}}" data-widget-id="{{widget_id}}" data-website-id="{{website_id}}">
                        <td class="text-center">
                            <a href="/widgets/create/{{widget_id}}" target="_blank">{{widget_id}}</a>
                        </td>
                        <td class="website-name ">
                            <span class="text-wrap">
                                <a href="/management/website/{{website_id}}" target="_blank">{{website_name}}</a>
                            </span>
                        </td>
                        <td class="widget-name ">
                            <span class="text-wrap">{{widget_name}}</span>
                        </td>
                        <td class="text-center">{{width}}</td>
                        <td class="text-center">{{height}}</td>
                        <td class="text-right">{{ctr}}%</td>
                        <td class="text-right">{{incoming}}</td>
                        <td class="text-right">{{display}}</td>
                        <td class="text-center">{{created}}</td>
                        <td class="text-center">{{last_used}}</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-default btn-xs btn-edit" data-toggle="modal">
                                <span class="fa fa-edit" data-toggle="tooltip" data-placement="top" title="Edit"></span>
                            </button>
                            <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#modal-delete">
                            <span class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="Delete"></span>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</script>