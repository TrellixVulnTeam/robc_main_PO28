@CHARSET "UTF-8";
#notes-area {
	color:#888;
	margin: 0 auto;
	position: relative;
	width: 100%;
	height: 250px;
	z-index: 10;
}
#notes-area ul li {
	margin:5px 0;
}
#notes-area .note, #fancy_ajax .note {
	height:150px;
	padding:10px;
	width:150px;
	position:absolute;
	overflow:hidden;
	cursor:move;

	font-family:Trebuchet MS,Tahoma,Myriad Pro,Arial,Verdana,sans-serif;
	font-size:20px;

	/* Adding a CSS3 shadow below the note, in the browsers which support it: */
	-moz-box-shadow:2px 2px 0 #DDDDDD;
	-webkit-box-shadow:2px 2px 0 #DDDDDD;
	box-shadow:2px 2px 0 #DDDDDD;
}

#fancy_ajax .note { cursor:default; }

/* Three styles for the notes: */

#notes-area .yellow, #fancy_ajax .yellow {
	background-color:#FDFB8C;
	border:1px solid #DEDC65;
}

#notes-area .blue, #fancy_ajax .blue {
	background-color:#A6E3FC;
	border:1px solid #75C5E7;
}

#notes-area .green, #fancy_ajax .green {
	background-color:#A5F88B;
	border:1px solid #98E775;
}

/* Each note has a data span, which holds its ID */
#notes-area span.data, #fancy_ajax span.data { display:none; }

#notes-area .author, #fancy_ajax .author {
	/* The author name on the note: */
	bottom:10px;
	color:#666666;
	font-family:Arial,Verdana,sans-serif;
	font-size:12px;
	position:absolute;
	right:10px;
}

#notes-area .note .close, #fancy_ajax .note .close {
	position: absolute;
	top: 2px;
	right: 5px;
	font-size: 20px;
	font-weight: bold;
	line-height: 20px;
	color: black;
	text-shadow: 0 1px 0 white;
	opacity: 0.2;
	filter: alpha(opacity=20);
}

#notes-area .note .close:hover, #fancy_ajax .note .close:hover {
	color: #000000;
	text-decoration: none;
	cursor: pointer;
	opacity: 0.4;
	filter: alpha(opacity=40);
}

#notes-area .note button.close, #fancy_ajax .note button.close {
	padding: 0;
	cursor: pointer;
	background: transparent;
	border: 0;
	-webkit-appearance: none;
}

#fancy_ajax {
	overflow: visible !important;
}

#fancy_ajax .chzn-search input {
	width: 278px !important;
}

#fancy_ajax .chzn-drop {
	width: 298px !important;
}
