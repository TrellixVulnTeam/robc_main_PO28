/* * Base structure */
/* Move down content because we have a fixed navbar that is 50px tall */
/* * Global add-ons */
.sub-header {
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
}

/* * Sidebar */
/* Hide for mobile, show later */


.navbar .btn-sidebar-toggle {
    float: left;
    margin-left: 15px;
}

/* Sidebar navigation */
.nav-sidebar {
    margin-right: -21px; /* 20px padding + 1px border */
    margin-bottom: 20px;
    margin-left: -20px;
}
 .nav-sidebar > li > a {
    padding: 2px 35px;
}
.nav-sidebar > .active > a, .nav-sidebar > .active > a:hover, .nav-sidebar > .active > a:focus {
    color: #fff;
    background-color: #428bca;
}
.nav-sidebar .title .pull-right {
    margin-top: -3px;
}
.nav > li.title {
    background: #F8F8F8;
}
.nav > li.title > h2 {
    color: #555;
    font-size: 14px;
    margin: 0;
    padding: 7px 15px;
}
/* * Main content */
.main {
    padding: 20px;
}

.right-content {
    padding-top: 15px;
}

.main .page-header {
    margin-top: 0;
}

/* * Placeholder dashboard ideas */
.placeholders {
    margin-bottom: 30px;
    text-align: center;
}
.placeholders h4 {
    margin-bottom: 0;
}
.placeholder {
    margin-bottom: 20px;
}
.placeholder img {
    display: inline-block;
    border-radius: 50%;
}

.dropdown-label {
    padding-top: 8px;
}

.description-labels {
    margin-bottom: 10px;
    margin-top: 5px;
}
.dropdown-group {
    margin-bottom: 5px;
}

.sidebar {
    left: 0;
    z-index: 1000;
    display: block;
    overflow-x: hidden;
    overflow-y: auto;
    border-right: 1px solid #EEE;
    position: absolute;
    min-height: 100%;
    background-color: white;
    margin-bottom: -52px;
}

.chart {
    height: 250px;
}

.preloading {
    background: url(/img/bootstrap/loading.gif) no-repeat center center;
}

.preloading.flame {
    background: url(/img/bootstrap/loading_flame.gif) no-repeat center center;
}

i.preloading {
    display: block;
    min-width: 32px;
    min-height: 32px;
}

.navbar {
    margin-bottom: 0;
}

/* Callouts from bootstrap */
.bs-callout {
    padding: 20px;
    margin: 20px 0;
    border: 1px solid #eee;
    border-left-width: 5px;
    border-radius: 3px;
}

.bs-callout-noborder {
    border-left: 5px solid #ddd;
}

.bs-callout-default {
    border-left-color: #777;
}

.bs-callout-primary {
    border-left-color: #428bca;
}

.bs-callout-success {
    border-left-color: #5cb85c;
}

.bs-callout-danger {
    border-left-color: #d9534f;
}

.bs-callout-warning {
    border-left-color: #f0ad4e;
}

.bs-callout-info {
    border-left-color: #5bc0de;
}

/* Carets for table sorter */
.tablesorter .header.headerSortDown:before {
    display: none;
}

.tablesorter .header.headerSortUp:after {
    display: none;
}

.tablesorter .header.headerSortDown:after {
    margin-right: 0;
}

.tablesorter .header {
    position: relative;
    padding-right: 15px;
    cursor: pointer;
}

.tablesorter .header:before {
    content: " ";
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 2px;
    vertical-align: middle;
    border-top: 4px solid;
    border-right: 4px solid transparent;
    border-left: 4px solid transparent;
    position: absolute;
    right: 5px;
    top: 55%;
}

.tablesorter .header:after {
    content: " ";
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 2px;
    vertical-align: middle;
    border-bottom: 4px solid;
    border-right: 4px solid transparent;
    border-left: 4px solid transparent;
    position: absolute;
    right: 5px;
    top: 35%;
}

.btn-file {
    position: relative;
    overflow: hidden;
}

.btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}

.fa-stack.fa-stack-sm {
    font-size: .7em;
    line-height: 1.7em;
    margin-top: -0.6em;
}

.calendar-text {
    margin-top: .4em;
}

.bg-transparent {
    background-color: transparent;
}

.breadcrumb.separator-pipe > li + li:before {
    content: '|';
    padding: 0 6px 0 3px;
}

.table-animated td {
    -webkit-transition: background-color 0.5s ease;
    -moz-transition   : background-color 0.5s ease;
    -o-transition     : background-color 0.5s ease;
    -ms-transition    : background-color 0.5s ease;
    transition        : background-color 0.5s ease;
}

.margin-bottom-0 {
    margin-bottom: 0;
}

.margin-top-30 {
    margin-top: 30px;
}
.vertical-align-middle,
.table > thead > tr > th {
    vertical-align: middle;
}

.table-responsive {
    width: 100%;
    margin-bottom: 15px;
    overflow-y: hidden;
    overflow-x: auto;
    -ms-overflow-style: -ms-autohiding-scrollbar;
    border: 1px solid #dddddd;
    -webkit-overflow-scrolling: touch;
}
.table-responsive > .table {
    margin-bottom: 0;
}
.table-responsive > .table > thead > tr > th,
.table-responsive > .table > tbody > tr > th,
.table-responsive > .table > tfoot > tr > th,
.table-responsive > .table > thead > tr > td,
.table-responsive > .table > tbody > tr > td,
.table-responsive > .table > tfoot > tr > td {
    white-space: nowrap;
}

.table-responsive > .table-bordered {
    border: 0;
}
.table-responsive > .table-bordered > thead > tr > th:first-child,
.table-responsive > .table-bordered > tbody > tr > th:first-child,
.table-responsive > .table-bordered > tfoot > tr > th:first-child,
.table-responsive > .table-bordered > thead > tr > td:first-child,
.table-responsive > .table-bordered > tbody > tr > td:first-child,
.table-responsive > .table-bordered > tfoot > tr > td:first-child {
    border-left: 0;
}
.table-responsive > .table-bordered > thead > tr > th:last-child,
.table-responsive > .table-bordered > tbody > tr > th:last-child,
.table-responsive > .table-bordered > tfoot > tr > th:last-child,
.table-responsive > .table-bordered > thead > tr > td:last-child,
.table-responsive > .table-bordered > tbody > tr > td:last-child,
.table-responsive > .table-bordered > tfoot > tr > td:last-child {
    border-right: 0;
}
.table-responsive > .table-bordered > tbody > tr:last-child > th,
.table-responsive > .table-bordered > tfoot > tr:last-child > th,
.table-responsive > .table-bordered > tbody > tr:last-child > td,
.table-responsive > .table-bordered > tfoot > tr:last-child > td {
    border-bottom: 0;
}

.table-hover > tbody > tr:hover,
.table-hover > tbody > tr:hover > td,
.table-hover > tbody > tr:hover > th
{
    background-color: #D9EDF7  ;
}


.table > thead > tr > td.attention,
.table > tbody > tr > td.attention,
.table > tfoot > tr > td.attention,
.table > thead > tr > th.attention,
.table > tbody > tr > th.attention,
.table > tfoot > tr > th.attention,
.table > thead > tr.attention > td,
.table > tbody > tr.attention > td,
.table > tfoot > tr.attention > td,
.table > thead > tr.attention > th,
.table > tbody > tr.attention > th,
.table > tfoot > tr.attention > th {
    background-color: #CC9999;
}

.text-wrap {
    white-space: normal;
    word-break: break-all;
}

@media(min-width: 768px) {
    .navbar-fixed-top .navbar-collapse, .navbar-fixed-bottom .navbar-collapse {
        max-height: 600px;
    }
}

@media (max-width: 480px) and (orientation: landscape) {
    .navbar-fixed-top .navbar-collapse, .navbar-fixed-bottom .navbar-collapse {
        max-height: 250px;
    }
}

@media(min-width: 992px) {
    .form-group-button {
        padding-top: 25px;
    }
}

@media(max-width: 992px) {
    .sidebar {
        -webkit-transform: translate3d(-150%, 0, 0);
        transform: translate3d(-150%, 0, 0);

        -webkit-transition: .5s;
        transition: .5s;
    }

    .sidebar-show {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);

        -webkit-transition: .5s;
        transition: .5s;
    }

    .nav-sidebar > li > a {
        padding: 5px 35px;
    }

    .navbar-header {
        text-align: center;
    }
}

@media(max-width: 768px) {
    .sidebar{
        width: 100%;
        top: 51px;
        bottom: 0;
        min-height: 0;
    }
}
