/* ================ */
/* = The 1Kb Grid = */     /* 12 columns, 80 pixels each, with 10 pixel gutter */
/* ================ */

.grid_1 { width:80px; }
.grid_2 { 
          width:auto; 
          margin: 0 !important;
          padding: 0 10px 0 5px;
}
.grid_3 { width:260px; }
.grid_4 { width:330px; }
.grid_5 { width:440px; }
.grid_6 { width:530px; }
.grid_7 { width:620px; }
.grid_8 {
          width:610px;
          margin:0 !important;
}
.grid_9 { width:800px;  clear: right;}
.grid_10 { width:890px; }
.grid_11 { width:980px; }
.grid_12 { width:1070px; }
.grid_13 { width:320px; }

.column {
          margin: 0px 5px;
          display: block;
          overflow: hidden;
          float: left;
}

.row {
       margin: 0px auto;
       width: 950px;
       overflow:hidden
}

.row .row {
	margin: 0 -5px;
	width: auto;
	display: inline-block;
}

.grid_2 a:link, .grid_2 a:active, .grid_2 a:visited {
	width: auto;
	margin: 0 !important;
	padding: 0 !important;
	display:block !important;
	float:left !important
}